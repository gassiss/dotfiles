#! /usr/bin/env bash

WIN=( $(swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect.x, .rect.y, .rect.width, .rect.height') )
X=${WIN[0]}
Y=${WIN[1]}
W=${WIN[2]}
H=${WIN[3]}

case "$1" in
  top)
    Y=0
    ;;
  bottom)
    Y=$(expr 1080 - $H)
    ;;
  left)
    X=0
    ;;
  right)
    X=$(expr 1920 - $W)
    ;;
esac

swaymsg "move position $X $(expr $Y - 32)"
