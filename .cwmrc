## Settings
borderwidth 0
snapdist 15
gap 0
sticky yes
moveamount 15

## Keybinds

unbind-key	all

bind-key	4CS-q		quit
bind-key	4S-r		restart
bind-key	4-space		menu-exec
bind-key  4-p     dmenu_run
bind-key	4-Return	alacritty
bind-key  4-q     "run_or_raise.sh google-chrome-stable google-chrome"
bind-key  4-w     "run_or_raise.sh brave-browser-nightly brave-browser-nightly"
bind-key  4-e     "run_or_raise.sh dbeaver DBeaver"
# bind-key  4-r     "run_or_raise.sh dbeaver DBeaver"
bind-key  4-a     "run_or_raise.sh st st-256color"
bind-key  4-s     "run_or_raise.sh code code-oss"
bind-key  4-d     "run_or_raise.sh slack slack"

## Groups
bind-key	4-1		    group-only-1
bind-key	4-2		    group-only-2
bind-key	4-3		    group-only-3
bind-key	4-4		    group-only-4
bind-key	4M-1		  group-toggle-1
bind-key	4M-2		  group-toggle-2
bind-key	4M-3		  group-toggle-3
bind-key	4M-4		  group-toggle-4
bind-key	4S-1		  window-movetogroup-1
bind-key	4S-2		  window-movetogroup-2
bind-key	4S-3		  window-movetogroup-3
bind-key	4S-4		  window-movetogroup-4

## WM stuff
bind-key	4C-q  	    window-delete
bind-key	4-b	 	      window-maximize
bind-key	4S-b		    window-fullscreen
bind-key	4C-h		    window-move-left-big
bind-key	4C-j		    window-move-down-big
bind-key	4C-k		    window-move-up-big
bind-key	4C-l		    window-move-right-big
bind-key	4S-h		    window-resize-left-big
bind-key	4S-j		    window-resize-down-big
bind-key	4S-k		    window-resize-up-big
bind-key	4S-l		    window-resize-right-big
bind-key  4-y         "resize_win.sh 25 0 0 25"
bind-key  4S-y        "resize_win.sh 0 -25 -25 0"
bind-key  4-u         "resize_win.sh 25 25 0 0"
bind-key  4-n         "resize_win.sh 0 0 25 25"
bind-key  4-m         "resize_win.sh 0 25 25 0"
bind-key	4-h		      window-snap-left
bind-key	4-j		      window-snap-down
bind-key	4-k		      window-snap-up
bind-key	4-l		      window-snap-right
bind-key	4-g		      "center.sh"
bind-key  4S-g        "center.sh resize"
bind-key  M-Tab       window-cycle
bind-key  MS-Tab      window-rcycle
bind-key  4-i         window-raise
bind-key  4-period    "move_window.sh"

## Mouse binds

bind-mouse	4-1		window-move
bind-mouse  M-1   window-raise
bind-mouse	4-3		window-resize


